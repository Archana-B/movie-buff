<header id="content-header">
  <h1><%= pluralize(@reviews.size, 'Review') %> for <%= link_to(@movie.name, @movie) %></h1>
</header>

<ol>
  <% @reviews.each do |review| %>
    <li>
      <p>
        <%= pluralize(review.stars, 'star') %> by <%= review.name %>:
      </p> 
      <p>
        <%= review.comment %>
      </p>
      <p>
      <%= time_ago_in_words(review.created_at) %> ago
      </p>
    </li>
  <% end %>
</ol>